from abc import ABC, abstractmethod

class Producto(ABC):
    def __init__(self, nombre, precio_base):
        self.nombre = nombre
        self.precio_base = precio_base

    @abstractmethod
    def calcular_precio(self):
        pass


class ProductoNormal(Producto):
    def calcular_precio(self):
        return self.precio_base


class ProductoImportado(Producto):
    def __init__(self, nombre, precio_base, arancel):
        super().__init__(nombre, precio_base)
        self.arancel = arancel  # porcentaje

    def calcular_precio(self):
        return self.precio_base * (1 + self.arancel)


def calcular_precio_total(lista_productos):
    total = 0
    for p in lista_productos:
        total += p.calcular_precio()  # polimorfismo
    return total


if __name__ == "__main__":
    productos = [
        ProductoNormal("Lapicero", 2_000),
        ProductoImportado("Celular", 1_000_000, 0.25),
    ]
    print("Total:", calcular_precio_total(productos))
