import math

class Rectangulo:
    def __init__(self, ancho, alto):
        self.ancho = ancho
        self.alto = alto

    def calcular_area(self):
        if self.ancho <= 0 or self.alto <= 0:
            raise ValueError("El ancho y alto deben ser mayores a 0.")
        return self.ancho * self.alto
    
class Circulo:
    def __init__(self, radio):
        self.radio = radio

    def calcular_area(self):
        if self.radio <= 0:
            raise ValueError("El radio debe ser mayor a 0.")
        return math.pi * self.radio ** 2
    
def calcular_area_total(figuras):
    total = 0
    for f in figuras:
        total += f.calcular_area()
    return total 

# ===================== SIMULACION =====================
figuras = [
    Rectangulo(4, 6),
    Rectangulo(3, 5),
    Circulo(5)
]

print("Area total:", calcular_area_total(figuras))
