from abc import ABC, abstractmethod

class Vehiculo(ABC):
    def __init__(self, placa, valor_comercial):
        self.placa = placa
        self.valor_comercial = valor_comercial

    @abstractmethod
    def calcular_impuesto(self):
        pass


class Automovil(Vehiculo):
    def calcular_impuesto(self):
        return self.valor_comercial * 0.015  


class Motocicleta(Vehiculo):
    def calcular_impuesto(self):
        return self.valor_comercial * 0.01   


def calcular_impuesto_total(lista_vehiculos):
    total = 0
    for v in lista_vehiculos:
        total += v.calcular_impuesto()  # polimorfismo
    return total


if __name__ == "__main__":
    vehiculos = [
        Automovil("ABC123", 50_000_000),
        Motocicleta("XYZ987", 8_000_000),
    ]
    print("Impuesto total:", calcular_impuesto_total(vehiculos))
