from abc import ABC, abstractmethod

class VehiculoTransporte(ABC):
    def __init__(self, distancia_km, tiempo_min, tarifa_base):
        self.distancia_km = max(0, distancia_km)
        self.tiempo_min = max(0, tiempo_min)
        self.tarifa_base = max(0, tarifa_base)

    @abstractmethod
    def calcular_tarifa(self):
        pass


class Autobus(VehiculoTransporte):
    def calcular_tarifa(self):
        return self.tarifa_base + self.distancia_km * 500  


class Metro(VehiculoTransporte):
    def calcular_tarifa(self):
        return self.tarifa_base + self.tiempo_min * 50      


class Taxi(VehiculoTransporte):
    def calcular_tarifa(self):
        return self.tarifa_base + self.distancia_km * 800 + self.tiempo_min * 30  


def calcular_tarifa_viaje(vehiculo: VehiculoTransporte):
    return vehiculo.calcular_tarifa()


if __name__ == "__main__":
    v1 = Autobus(10, 30, 2000)
    v2 = Metro(10, 20, 2500)
    v3 = Taxi(10, 15, 3000)

    print("Tarifa autobus: $", calcular_tarifa_viaje(v1))
    print("Tarifa Metro: $", calcular_tarifa_viaje(v2))
    print("Tarifa Taxi: $", calcular_tarifa_viaje(v3)) 
