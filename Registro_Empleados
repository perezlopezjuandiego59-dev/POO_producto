class EmpleadoAsalariado:
    def __init__(self, nombre, salario_mensual):
        self.nombre = nombre
        self.salario_mensual = salario_mensual

    def calcular_salario(self):
        if self.salario_mensual <= 0:
            raise ValueError("El salario debe ser mayor a 0.")
        return self.salario_mensual
    
class EmpleadoPorHoras:
    def __init__(self, nombre, valor_hora, horas):
        self.nombre = nombre
        self.valor_hora = valor_hora
        self.horas = horas

    def calcular_salario(self):
        if self.valor_hora <= 0 or self.horas <= 0:
            raise ValueError("Valores invalidos para empleado por horas")
        return self.valor_hora * self.horas 
    
def calcular_salario_total(empleados):
    total = 0
    for e in empleados:
        total += e.calcular_salario()
    return total 

# ===================== SIMULACION ===================
empleados = [
    EmpleadoAsalariado("Maria", 2500000),
    EmpleadoPorHoras("Jose", 40000, 80)
]

print("Salario total a pagar:", calcular_salario_total(empleados))
